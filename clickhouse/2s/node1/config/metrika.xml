<yandex>
    <!-- 集群配置 -->
    <clickhouse_remote_servers>
        <cluster_2s>
            <!-- 数据分片1  -->
            <shard>
                <internal_replication>true</internal_replication>
                <replica>
                    <host>172.16.2.231</host>
                    <port>5900</port>
                    <user>dba</user>
                    <password>123456</password>
                </replica>
            </shard>

            <!-- 数据分片2  -->
            <shard>
                <internal_replication>true</internal_replication>
                <replica>
                    <host>172.16.2.231</host>
                    <port>6900</port>
                    <user>dba</user>
                    <password>123456</password>
                </replica>
            </shard>
        </cluster_2s>
    </clickhouse_remote_servers>

    <networks>
        <ip>::/0</ip>
    </networks>

    <!-- 数据压缩算法  -->
    <clickhouse_compression>
        <case>
            <min_part_size>10000000000</min_part_size>
            <min_part_size_ratio>0.01</min_part_size_ratio>
            <method>lz4</method>
        </case>
    </clickhouse_compression>

</yandex>